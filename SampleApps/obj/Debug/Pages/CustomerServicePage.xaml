<Page
    x:Class="SampleApps.Pages.CustomerServicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleApps.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Row 1-->
        <Image Source="/Assets/action_bar.png" 
               Grid.Row="0" Grid.ColumnSpan="2"/>

        <!--Row 2-->
        <Image x:ConnectionId='1' Source="/Assets/left_arrow.png" 
               Grid.Row="1" Grid.Column="0"
               Name="imgBack"                        
               HorizontalAlignment="Left" Margin="15,0"/>

        <Image x:ConnectionId='2' Source="/Assets/home_icon.png" 
               Grid.Row="1" Grid.Column="1"
               Name="imgHome"                        
               HorizontalAlignment="Right" Margin="15,0"/>

        <!--Row 3-->
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.ColumnSpan="2">
            <Border Background="#55d5f9">
                <TextBlock 
                Text="Customer Care Center" 
                HorizontalAlignment="Stretch"
                TextAlignment="Center"
                Foreground="Black" 
                FontWeight="Bold"
                Height="49"
                FontSize="30"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="White" HorizontalAlignment="Stretch"></Border>
        </StackPanel>

        <!--Row 4-->
        <ScrollViewer
            Grid.Row="3" Grid.ColumnSpan="2"
            VerticalScrollBarVisibility="Visible" 
            VerticalScrollMode="Enabled"
            IsTapEnabled="False"
            Margin="0,0,0,5"
            Background="#E6E6FA">

            <ListView x:ConnectionId='6' Name="customerServiceListView"
                  DataContext="{Binding}"
                                                         
                  IsTapEnabled="False"
                  IsItemClickEnabled="False">

                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Background="#E6E6FA" HorizontalAlignment="Stretch" Orientation="Horizontal" Height="50">
                            <Border BorderThickness="1" Width="145" BorderBrush="White">
                                <TextBlock Text="Station" HorizontalAlignment="Center" TextAlignment="Center" Foreground="Black" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderThickness="1" Width="160" BorderBrush="White">
                                <TextBlock Text="Address" HorizontalAlignment="Center" TextAlignment="Center" Foreground="Black" FontWeight="Bold" FontSize="20"/>
                            </Border>
                            <Border BorderThickness="1" Width="140" BorderBrush="White">
                                <TextBlock Text="Help Line" HorizontalAlignment="Center" TextAlignment="Center" Foreground="Black" FontWeight="Bold" FontSize="20"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ListView.HeaderTemplate>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="#E6E6FA" HorizontalAlignment="Stretch" Orientation="Horizontal">
                            <Border BorderThickness="1" Width="145" BorderBrush="White">
                                <TextBlock Text="{Binding district}" TextWrapping="Wrap" TextAlignment="Center" Foreground="Black" FontSize="20"/>
                            </Border>
                            <Border BorderThickness="1" Width="160" BorderBrush="White">
                                <TextBlock Text="{Binding address}" TextWrapping="Wrap" TextAlignment="Center" Foreground="Black" FontSize="20"/>
                            </Border>
                            <Border BorderThickness="1" Width="150" BorderBrush="White">
                                <TextBlock Text="{Binding helpline}" TextWrapping="Wrap" TextAlignment="Center" Foreground="Black" FontSize="20"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!--Row 5-->
        <Image x:ConnectionId='3' Source="/Assets/tele.png" Name="imgTeletalk"                            
               Grid.Row="4" Grid.Column="0" Margin="15,0"
               HorizontalAlignment="Left"/>

        <Image x:ConnectionId='4' Source="/Assets/facebook.png" Name="imgFacebook"                            
               Grid.Row="4" Grid.Column="1" 
               />

        <Image x:ConnectionId='5' Source="/Assets/youtube.png" Name="imgYoutube"                           
               Grid.Row="4" Grid.Column="1" 
               HorizontalAlignment="Right" Margin="15,0"/>
    </Grid>
</Page>

