<Page
    x:Class="SampleApps.Pages.VoicePackagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleApps.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Row 1-->
        <Image Source="/Assets/action_bar.png" 
               Grid.Row="0" Grid.ColumnSpan="2"/>

        <!--Row 2-->
        <Image x:ConnectionId='1' Source="/Assets/left_arrow.png" 
               Grid.Row="1" Grid.Column="0"
               Name="imgBack"                        
               HorizontalAlignment="Left" Margin="15,0"/>

        <Image x:ConnectionId='2' Source="/Assets/home_icon.png" 
               Grid.Row="1" Grid.Column="1"
               Name="imgHome"                        
               HorizontalAlignment="Right" Margin="15,0"/>

        <!--Row 3-->
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.ColumnSpan="2">
            <Border Background="#55d5f9">
                <TextBlock 
                Text="Teletalk Packages" 
                HorizontalAlignment="Stretch"
                TextAlignment="Center"
                Foreground="Black" 
                FontWeight="Bold"
                Height="49"
                FontSize="30"/>
            </Border>
            <Border BorderThickness="1" BorderBrush="White" HorizontalAlignment="Stretch"></Border>
        </StackPanel>

        <!--Row 4-->
        <ScrollViewer
            Grid.Row="3" Grid.ColumnSpan="2"
            VerticalScrollBarVisibility="Visible"
            IsTapEnabled="False"
            VerticalScrollMode="Enabled"
            HorizontalAlignment="Stretch"
            Background="#E6E6FA">

            <ListView x:ConnectionId='6' Name="voicePackageListView"
                  DataContext="{Binding}"
                                                      
                  IsTapEnabled="False"
                  IsItemClickEnabled="False">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Border Background="#55d5f9">
                                <TextBlock 
                                    Text="{Binding package_name}" 
                                    HorizontalAlignment="Stretch"
                                    TextAlignment="Center"
                                    Foreground="Black" 
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="25"/>
                            </Border>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="On-Net Voice" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding on_net_voice}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Off-Net Voice" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding off_net_voice}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="On-Net Video" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding on_net_viddeo}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Fnf Num" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding no_of_fnf}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Fnf On-Net Voice" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding fnf_on_net_voice}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Fnf Video" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding fnf_video}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Fnf Sms" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding fnf_sms}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Data Rate" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding data_rate}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Pulse" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding pulse}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Mobile Tv" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding mobile_tv}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="MMS On-Net" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding mms_on_net}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="SMS On-Net" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding sms_on_net}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="SMS Off-Net" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="{Binding sms_off_net}" Width="280" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <Border BorderThickness="1" BorderBrush="White">
                                    <TextBlock Text="Subscription" Width="200" TextWrapping="Wrap" Foreground="Black" FontSize="20"/>
                                </Border>

                                <Button x:ConnectionId='7' Name="btnSend"                       Width="280" VerticalAlignment="Stretch" Content="Send" Background="#55d5f9" Foreground="Black" FontSize="20"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!--Row 5-->
        <Image x:ConnectionId='3' Source="/Assets/tele.png" Name="imgTeletalk"                            
               Grid.Row="4" Grid.Column="0" Margin="15,0"
               HorizontalAlignment="Left"/>

        <Image x:ConnectionId='4' Source="/Assets/facebook.png" Name="imgFacebook"                            
               Grid.Row="4" Grid.Column="1" />

        <Image x:ConnectionId='5' Source="/Assets/youtube.png" Name="imgYoutube"                           
               Grid.Row="4" Grid.Column="1" 
               HorizontalAlignment="Right" Margin="15,0"/>
    </Grid>
</Page>

